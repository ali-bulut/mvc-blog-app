@model IEnumerable<MvcBlogApp.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Blog Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />

@if (TempData["Category"] != null)
{
    var category = (MvcBlogApp.Models.Category)TempData["Category"];

    <div class="alert alert-success" role="alert">
        <strong><span class="glyphicon glyphicon-ok" style="margin-right:3px;"></span>@category.CategoryName</strong> Kayıt Edildi
    </div>
}

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th style="width:70%;">
            @Html.DisplayNameFor(model => model.CategoryName)

        </th>
        <th style="width:15%;">
            BlogCount
        </th>
        <th style="width:15%;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>

            <td>
                @Html.DisplayFor(i => item.Blogs.Count)

            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning    btn-xs" }) |
                @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
