@*controllerdan bu sayfaya bir liste gönderdiğimiz için Ienumarable içine aldık diğer türlü foreachle dönemezdik*@
@model IEnumerable<MvcBlogApp.Models.BlogModel>
@{
    ViewBag.Title = "Index";
}

<h2>Blog Listesi</h2>
@Html.Partial("BlogList", Model)

@section RightColumn{
    <div style="margin-top:20px;">
        <div class="well">
            <h4>Blog Arama</h4>
            <hr />
            <div class="input-group">
                @Html.TextBox("q", null, new { @class = "form-control" })
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div>
        </div>
        @{ Html.RenderAction("CategoryList", "Category");}
    </div>
}


